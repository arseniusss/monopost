<Window x:Class="Monopost.Web.Views.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Template Name" Width="300" Height="150" WindowStartupLocation="CenterScreen">
    <StackPanel Margin="10">
        <TextBlock Text="Enter Template Name:" FontWeight="Bold" Margin="0,0,0,10"/>
        <TextBox x:Name="InputTextBox" Width="250" Margin="0,0,0,10"/>
        <Button Content="OK" Width="80" HorizontalAlignment="Right" Click="OkButton_Click"/>
    </StackPanel>
</Window>

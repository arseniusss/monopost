<Page x:Class="Monopost.Web.Views.PostingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Posting">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <TextBlock Text="Post uploading" FontSize="24" FontWeight="Bold" />
        <TextBox Width="300" Height="100" Margin="10" TextWrapping="Wrap" Text="Enter post text" />
        <Button Content="Upload file" Width="150" Margin="10"/>
    </StackPanel>
</Page>
